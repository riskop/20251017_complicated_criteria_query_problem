<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <property name="pattern" value="%d{HH:mm:ss.SSS} [%thread] |%X{sessionHash}|%X{whoSubjectId}|%X{userId}| %-5level %logger{35} - %msg%n"/>

<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <!-- encoders are assigned the type
         ch.qos.logback.classic.encoder.PatternLayoutEncoder by default -->
    <encoder>
      <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
    </encoder>
  </appender>

  <root level="INFO">
    <appender-ref ref="STDOUT" />
  </root>

  <logger name="org.hibernate.SQL" level="DEBUG" />
  <logger name="org.hibernate.type.descriptor.sql.BasicBinder" level="TRACE" />
  <!-- itt lehet bekapcsolni, hogy a tesztek (pld. XsignDossierService2Test) amik
       apache http client et hasznalnak, eseten lassuk a http forgalmat
    <logger name="org.apache.http" level="DEBUG" />
    -->

</configuration>